            <Button class="btn btn-primary btn-rounded-sm" text="Mapa" id="maps" tap="buttonTap" row="3" width="200" height="50"/>
            <Button class="btn btn-primary btn-rounded-sm" text="Xerox & Banheiros" id="xerox"  tap="buttonTap" row="1"  width="200" height="50"/>
